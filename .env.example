# Database
DB_URI=postgresql://user:password@db:5432/dealer_dashboard
SECRET_KEY=dev-key-please-change-in-prod

# Redis & Celery
REDIS_HOST=redis
REDIS_PORT=6379
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Mail
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_username
MAIL_PASSWORD=your_password
MAIL_SENDER=noreply@example.com
MAIL_REPLY_DOMAIN=reply.example.com
MAILGUN_WEBHOOK_SIGNING_KEY=your-mailgun-key

# Google Cloud
GCP_PROJECT=your-project-id
GCS_BUCKET=your-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=/app/gcs_key.json

# Auth / SSO (Authlib)
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret
OIDC_CONF_URL=https://accounts.google.com/.well-known/openid-configuration
